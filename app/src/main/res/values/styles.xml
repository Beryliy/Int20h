<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="Description">
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="SecondatyText">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="DefaultFragment">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">@dimen/padding_side_fragment</item>
        <item name="android:paddingTop">@dimen/padding_top_fragment</item>
        <item name="android:paddingEnd">@dimen/padding_side_fragment</item>
        <item name="android:paddingBottom">@dimen/padding_bottom_fragment</item>
    </style>

</resources>
